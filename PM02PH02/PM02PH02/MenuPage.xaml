<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM02PH02.MenuPage"
             BackgroundImage ="maxresdefault.jpg"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Transparent" Margin="10,10,10,10">
            <Frame BackgroundColor="violet" Padding="24" CornerRadius="0">
                <Label Text="Menu principal" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Button x:Name="btnApp1" Text="Operaciones" Clicked="btnApp1_Clicked"> </Button>

            <Button x:Name="btnApp2" Text="Binding Content" Clicked="btnApp2_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>